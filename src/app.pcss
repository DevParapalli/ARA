    /* Plugin slash */
}
.carta-theme__ara.carta-editor {
    background-color: oklch(var(--b2));
    border: 1px solid oklch(var(--p));
    border-radius: var(--rounded-box);
    @apply w-full;
}
.carta-theme__ara.carta-editor:focus-within {
    outline: 2px solid oklch(var(--p));
    @apply border-transparent;
}
.carta-theme__ara.carta-editor .carta-wrapper {
    padding: 1rem;
    flex-grow: 1;
    overflow-y: auto;
}
.carta-theme__ara.carta-editor .carta-wrapper .carta-container {
    min-height: 2rem;
    /* max-height: 160px; */
}
.carta-theme__ara.carta-editor .carta-font-code {
    font-family: 'Fira Code', monospace;
    font-size: 16px;
    caret-color: oklch(var(--nc));
}
.carta-theme__ara.carta-editor .carta-toolbar {
    height: 2.5rem;
    background-color: oklch(var(--b1));
    border-bottom: var(--tab-border, 1px) solid oklch(var(--s));
    padding-right: 12px;
    border-top-left-radius: var(--rounded-box);
    border-top-right-radius: var(--rounded-box);
}
.carta-theme__ara.carta-editor .carta-toolbar .carta-icon {
    width: 2rem;
    height: 2rem;
}
.carta-theme__ara.carta-editor .carta-toolbar .carta-icon:hover {
    color: oklch(var(--bc));
    background-color: oklch(var(--b1));
}
.carta-theme__ara.carta-editor .carta-toolbar-left > *:first-child {
    border-top-left-radius: var(--rounded-box);
}
.carta-theme__ara.carta-editor .carta-toolbar-left > * {
    padding-left: 1rem;
    padding-right: 1rem;
    font-size: 0.95rem;
}
.carta-theme__ara.carta-editor .carta-toolbar-left .carta-active {
    height: 100%;
    background-color: oklch(var(--b2));
    transform: translateY(1px);
    color: oklch(var(--bc));
    border-right: 1px solid oklch(var(--b1));
    /* border-bottom: 2px solid oklch(var(--b3)); */
}
.carta-theme__ara.carta-editor .carta-toolbar-left .carta-active:not(:first-child) {
    border-left: 1px solid oklch(var(--b1));
}
.carta-theme__ara.carta-editor [class*='shj-lang-'] {
    background: transparent;
}
.carta-theme__ara.carta-emoji {
    width: 18rem;
    max-height: 14rem;
    overflow-y: scroll;
    border-radius: 4px;
    font-family: inherit;
    background-color: oklch(var(--b2));
    padding: 6px;
    scroll-padding: 6px;
    gap: 6px;
}
.carta-theme__ara.carta-emoji button {
    background: #161b22;
    aspect-ratio: 1;
    border-radius: 4px;
    border: 0;
    padding: 0;
    cursor: pointer;
    font-size: 1.2rem;
    line-height: 100%;
}
.carta-theme__ara.carta-emoji button:hover,
.carta-theme__ara.carta-emoji button.carta-active {
    background: oklch(var(--b1));
}
.carta-theme__ara.carta-slash {
    width: 18rem;
    max-height: 14rem;
    overflow-y: scroll;
    border-radius: 4px;
    font-family: inherit;
    background-color: oklch(var(--b2));
    padding: 6px;
    scroll-padding: 6px;
}
.carta-theme__ara.carta-slash span {
    width: fit-content;
}
.carta-theme__ara.carta-slash button {
    background: none;
    width: 100%;
    padding: 10px;
    border: 0;
    border-radius: 4px;
}
.carta-theme__ara.carta-slash .carta-slash-group {
    padding: 0 4px 0 4px;
    margin-bottom: 4px;
    font-size: 0.8rem;
}
.carta-theme__ara.carta-slash button.carta-active,
.carta-theme__ara.carta-slash button:hover {
    background: #161b22;
    cursor: pointer;
}
.carta-theme__ara.carta-slash .carta-snippet-title {
    font-size: 0.85rem;
    font-weight: 600;
}
.carta-theme__ara.carta-slash .carta-snippet-description {
    font-size: 0.8rem;
    text-overflow: ellipsis;
}

