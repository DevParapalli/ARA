/* Code Highlighter Classes */

[class*='shj-lang-'] {
    white-space: pre;
    margin: 10px 0;
    border-radius: 10px;
    padding: 30px 20px;

    background: oklch(var(--b3));
    color: oklch(var(--bc));

    box-shadow: 0 0 5px #0001;
    text-shadow: none;
    font-family: 'Fira Code', monospace;
    font-size: 16px;
    line-height: 24px;
    box-sizing: border-box;
    max-width: min(100%, 100vw);
}
.shj-inline {
    margin: 0;
    padding: 2px 5px;
    display: inline-block;
    border-radius: 5px;
}
[class*='shj-lang-']::selection,
[class*='shj-lang-'] ::selection {
    /* background: #bdf5; */
    @apply bg-blue-700/70;
}
[class*='shj-lang-'] > div {
    display: flex;
    overflow: auto;
}
[class*='shj-lang-'] > div :last-child {
    flex: 1;
    outline: none;
}
.shj-numbers {
    padding-left: 5px;
    counter-reset: line;
}
.shj-numbers div {
    padding-right: 5px;
}
.shj-numbers div::before {
    display: block;
    content: counter(line);
    opacity: 0.5;
    text-align: right;
    margin-right: 5px;
    counter-increment: line;
}
.shj-syn-cmnt {
    font-style: italic;
}

.shj-oneline {
    padding: 12px 10px;
}
.shj-lang-http.shj-oneline .shj-syn-kwd {
    background: #25f;
    color: #fff;
    padding: 5px 7px;
    border-radius: 5px;
}

[class*='shj-lang-'] {
	color: oklch(var(--bc));
	background: olkch(var(--b3));
}
[class*='shj-lang-']::before {
	color: #6f9aff;
}

.shj-syn-deleted,
.shj-syn-err,
.shj-syn-var {
	color: oklch(var(--er));
}
.shj-syn-section,
.shj-syn-kwd {
	color: oklch(var(--p));
}
.shj-syn-class {
	color: oklch(var(--in));
}
.shj-numbers,
.shj-syn-cmnt {
	color: oklch(var(--nc) / 0.5);
}
.shj-syn-insert,
.shj-syn-type,
.shj-syn-func,
.shj-syn-bool {
	color: oklch(var(--su));
}
.shj-syn-num {
	color: oklch(var(--a));
}
.shj-syn-oper {
	color: oklch(var(--s));
}
.shj-syn-str {
	color: oklch(var(--a));
}

.carta-editor:focus-within ~ .cell-actions {
    outline: 2px solid oklch(var(--p));
    @apply border-transparent;
}
